.cardImg{
    width: 100%;
}
.containerListAndArrows{
    display: flex;
    justify-content: center;
    align-items: center;
}

.ProductsFlex{
    display: flex;
    padding: 0;
    list-style: none;
    justify-content: space-between;
    /* overflow: hidden; */
    overflow-y: hidden;
    overflow-x: scroll;
    scrollbar-width: none;
}
.cardSlidebar{
    min-width: 21%;
}
.cardSlidebar:first-child {
    margin-left: 0;
  }
.rightarrowproducts {
    text-align: right;
}
.leftarrowproducts{
    text-align: left;
}
.rightarrowproducts , .leftarrowproducts{
    width: 3rem;
}
.rightarrowproducts span , .leftarrowproducts span{
    font-size: 2rem;
    border-radius: 100%;
    border: 1px solid #000;
}