.cardImg{
    width: 100%;
}
.containerListAndArrows{
    display: flex;
    justify-content: center;
    align-items: center;
}

.ProductsFlex{
    display: flex;
    padding: 0;
    list-style: none;
    justify-content: space-between;
    /* overflow: hidden; */
    overflow-y: hidden;
    overflow-x: scroll;
    scrollbar-width: 0;
}
.cardSlidebar{
    min-width: 22%;
}
.cardSlidebar:first-child {
    margin-left: 0;
  }
.rightarrowproducts {
    text-align: right;
}
.leftarrowproducts{
    text-align: left;
}
.rightarrowproducts , .leftarrowproducts{
    width: 4rem;
    height: 3rem;
    margin: 0.5rem;
}
.rightarrowproducts img , .leftarrowproducts img{
    border-radius: 100%;
    border: 2px solid #000;
}
.product-price{
    font-weight: 100;
    color: #000;
}