.headerContainer{
    display: flex;
    flex-direction: column;
    padding: 3% 5%;
    width: 100%;
    align-items: stretch;
    justify-content: flex-start;
}
.HeaderSection{
    display: grid;
    grid-template-areas: 
    "iconHeader blocksContent headerOptions"; 
    grid-template-columns: 30% auto 10%;
    align-items: flex-start;
    justify-items: flex-end;
}

.iconHeader{
    grid-area: iconHeader;
    justify-self: start;
}


.headerOptions{
    grid-area: headerOptions;
}

.blocksContent{
    display: grid;
    grid-area: blocksContent;
    grid-template-areas: "blockLinkList PagesIndividual";
    grid-template-columns: auto auto;
    width: fit-content;
}
.blockLinkList{
    grid-area: blockLinkList;
    display: grid;
    align-items: flex-start;
    justify-content: space-evenly;
}
.blockPageItems{
    grid-area: PagesIndividual;
    display: grid;
    align-items: flex-start;
    justify-content: space-evenly;
}

.headerOptions{
    display: grid;
    width: 100%;
    align-items: baseline;
    justify-items: stretch;
    justify-content: space-around;
}