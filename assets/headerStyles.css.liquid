.headerContainer{
    display: flex;
    flex-direction: column;
    padding: 1% 10%;
    width: 100%;
    align-items: stretch;
    justify-content: flex-start;
    background-color: transparent;
    position: absolute;
    top: 45px;
    left: 0;
    z-index: 3;
    color: #FFF;
}

.HeaderSection{
    display: grid;
    grid-template-areas: 
    "iconHeader blocksContent independientLinks headerOptions"; 
    grid-template-columns: 1f 1fr 1fr 1fr;
    align-items: flex-start;
    justify-items: flex-end;
    height: 75px;
}

.iconHeaderContainer{
    grid-area: iconHeader;
    justify-self: start;
}

.iconHeader{
    height: 100px;
    margin-top: -15px;
}
.independentLinks{
    grid-area: independientLinks;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding-top: 1rem;
    width: 100%;
}
.independentLinkTitle{
    cursor: pointer;
}
.independentLinkTitle:hover{
    color: #BBB;
}

.headerOptions{
    grid-area: headerOptions;
    padding-top: 1rem;
}

.blocksContent{
    grid-area: blocksContent;
    display: grid;
    grid-template-areas: "blockLinkList PagesIndividual";
    grid-template-columns: auto auto;
    width: 100%;
    justify-items: center;
    align-items: center;
    padding-top: 1rem;
}
.productsList{
    grid-area: blockLinkList;
    display: flex;
    align-items: flex-start;
    justify-content: space-evenly;
    width: fit-content;
}
.descriptionOptions{
    grid-area: PagesIndividual;
    display: flex;
    align-items: flex-start;
    justify-content: space-evenly;
    width: fit-content;

}
.dropdownButton{
    color: #FFF;
}
.dropdownButtonBlack{
    color: #000 !important;
}
.dropdownButton img{
    width: 1rem;
    height: 1rem;
}

.headerMenuOptions{
    display: grid;
    padding: 1% 10%;
    width: 100%;
    align-items: baseline;
    justify-items: center;
    justify-content: stretch;
    position: absolute;
    left: 0;
    z-index: 3;
    transition: top 0.5s ease-in-out;
    height: fit-content;
}


/* el menu de los productos */
.collectionsLists, .pageList{
    grid-template-columns: repeat(auto-fill, minmax(15rem,1fr)); 
    align-items: center;
    justify-content: center;
    justify-items: stretch;
    width: 100%;
}
.dropdownItem, .pageItem{
    display: grid;
    grid-template-areas: 
    'imageItem'
    'titleItem'
    'linksItem'
    ;
    flex-direction: column;
    align-items: start;
    justify-items: start;
    border-right: 0.5px solid #BBB;
    padding: 0.8rem;
    width: 100%;
    height: fit-content;
}
.dropdownImg{
    grid-area: imageItem;
    border-bottom: 0.8rem solid #F4AB9D;
    width: 100%;
    height: 150px;
    margin-bottom: 1rem;
}
.dropdownTitle, .pageItemTitle{
    grid-area: titleItem;
    border-bottom: 0.5px solid #BBB;
    font-size: 1.2rem;
    padding-bottom: 1rem;
    margin-bottom: 7px;
}
.dropdownList{
    grid-area: linksItem ;
}


/* menu de las paginas */
.pageList{
    justify-content: center;
    padding-left: 25%;
    align-items: start;
}
.pageItem{
    justify-items: center;
}

.pageItemTitle{
    border: none;
    font-weight: bold;
    color: #F4AB9D;
}
.pageItemTitle:hover{
    color: #D79E93;        

}
/* display or not icon */
.iconShow{
    display: inline;
}
.iconHidden{
    display: none;
}
/* HEADER ACTIVATE DROPDOWN */
.headerClicked{
    background-color: #FFF;
    border-bottom:  0.5px solid #BBB ;
    color: #000;
}

.lowerHeaderHidden{
    top: -230px;
    visibility: hidden;
}
.lowerHeaderMovement{
    top: 156px;
    visibility: visible;
}
.showMenu{
    display: grid;
}
.hiddeMenu{
    display: none;
}
.userWhite{
    border: 1px solid #FFF ;
    border-radius: 100%;
}

.userBlack{
    border: 1px solid #000 ;
    border-radius: 100%;
}