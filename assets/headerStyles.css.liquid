.headerContainer{
    display: flex;
    flex-direction: column;
    padding: 1% 5%;
    width: 100%;
    align-items: stretch;
    justify-content: flex-start;
    background-color: transparent;
    position: absolute;
    top: 45px;
    left: 0;
    z-index: 2;
}
.HeaderSection{
    display: grid;
    grid-template-areas: 
    "iconHeader blocksContent headerOptions"; 
    grid-template-columns: 30% auto 10%;
    align-items: flex-start;
    justify-items: flex-end;
    height: 75px;
}

.iconHeaderContainer{
    grid-area: iconHeader;
    justify-self: start;
}
.iconHeader{
    height: 100px;
    margin-top: -15px;
}

.headerOptions{
    grid-area: headerOptions;
    
}

.blocksContent{
    display: grid;
    grid-area: blocksContent;
    grid-template-areas: "blockLinkList PagesIndividual";
    grid-template-columns: auto auto;
    width: fit-content;
}
.blockLinkList{
    grid-area: blockLinkList;
    display: grid;
    align-items: flex-start;
    justify-content: space-evenly;
}
.blockPageItems{
    grid-area: PagesIndividual;
    display: grid;
    align-items: flex-start;
    justify-content: space-evenly;
}

.headerMenuOptions{
    display: grid;
    padding: 1% 5%;
    width: 100%;
    align-items: baseline;
    justify-items: stretch;
    justify-content: space-around;
    position: absolute;
    top: 77px;
    left: 0;
    z-index: 1;
}