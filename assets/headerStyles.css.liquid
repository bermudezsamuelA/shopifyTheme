.headerContainer{
    display: flex;
    flex-direction: column;
    padding: 1% 10%;
    width: 100%;
    align-items: stretch;
    justify-content: flex-start;
    background-color: transparent;
    position: absolute;
    top: 45px;
    left: 0;
    z-index: 2;
    color: #FFF;
}

.HeaderSection{
    display: grid;
    grid-template-areas: 
    "iconHeader blocksContent headerOptions"; 
    grid-template-columns: 20% 60% 20%;
    align-items: flex-start;
    justify-items: flex-end;
    height: 75px;
}

.iconHeaderContainer{
    grid-area: iconHeader;
    justify-self: start;
}

.iconHeader{
    height: 100px;
    margin-top: -15px;
}

.headerOptions{
    grid-area: headerOptions;
    padding-top: 1rem;
}

.blocksContent{
    grid-area: blocksContent;
    display: grid;
    grid-template-areas: "blockLinkList PagesIndividual";
    grid-template-columns: auto auto;
    width: 100%;
    justify-items: center;
    align-items: center;
    padding-top: 1rem;
}
.productsList{
    grid-area: blockLinkList;
    display: flex;
    align-items: flex-start;
    justify-content: space-evenly;
    width: fit-content;
}
.descriptionOptions{
    grid-area: PagesIndividual;
    display: flex;
    align-items: flex-start;
    justify-content: space-evenly;
    width: fit-content;

}
.dropdownButton{
    color: #FFF;
}
.dropdownButtonBlack{
    color: #000 !important;
}
.dropdownButton img{
    width: 1rem;
    height: 1rem;
}

.headerMenuOptions{
    display: grid;
    padding: 1% 10%;
    width: 100%;
    align-items: baseline;
    justify-items: center;
    justify-content: center;
    position: absolute;
    top: 200px;
    left: 0;
    z-index: 1;
    transition: top 0.5s ease-in-out;
}
.collectionsLists{
    display: flex;
    justify-content: center;
    align-items: center;
}
.dropdownItem{
    display: grid;
    grid-template-areas: 
    'imageItem'
    'titleItem'
    'linksItem'
    ;
    flex-direction: column;
    align-items: start;
    justify-items: start;
    border-right: 0.5px solid #BBB;
    padding: 0.8rem;
    width: 25%;
    height: 300px;
}
.dropdownImg{
    grid-area: imageItem;
    border-bottom: 0.8rem solid #F4AB9D;
    width: 100%;
    height: 105px;
    margin-bottom: 1rem;
}
.dropdownTitle{
    grid-area: titleItem;
    border-bottom: 0.5px solid #BBB;
    font-size: 1.2rem;
    padding-bottom: 1rem;
    margin-bottom: 7px;
}
.dropdownList{
    grid-area: linksItem ;
}
/* display or not icon */
.iconShow{
    display: inline;
}
.iconHidden{
    display: none;
}
/* HEADER ACTIVATE DROPDOWN */
.headerClicked{
    background-color: #FFF;
}
.upperHeaderBorder{
    border-bottom:  0.5px solid #BBB ;
}
.lowerHeaderMovement{
    top: 405px;
    height: 330px;
}